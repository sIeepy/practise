%table.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      %tr
        %td= i + 1
        %td
          = image_tag(MovieApiCover.poster(movie.title, movie.cover), size: "170x244")
        %td
          %h4
            = link_to movie.title, movie_path(movie)
          %p
            %strong
              - movie.genres.each do |genre|
                = link_to genre.name, movies_genre_path(movie.genres)
            = ' (' + movie.released_at.to_s + ')'
          %p= MovieApiPlot.plot(movie.title, movie.description)
