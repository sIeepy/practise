%table.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      %tr
        %td= i + 1
        %td
          -# %img.img-rounded{ src: MovieApiInfo.poster(movie.title) }
          = image_tag(MovieApiInfo.poster(movie.title), size: "170x244")
        %td
          %h4
            = link_to movie.title, movie_path(movie)
          %p
            %strong
              = link_to movie.genre.name, movies_genre_path(movie.genre)
            = ' (' + movie.released_at.to_s + ')'
          %p= MovieApiInfo.plot(movie.title)
